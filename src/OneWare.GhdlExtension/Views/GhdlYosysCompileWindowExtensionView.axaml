<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:OneWare.GhdlExtension.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OneWare.GhdlExtension.Views.GhdlYosysCompileWindowExtensionView"
             x:DataType="viewModels:GhdlYosysCompileWindowExtensionViewModel" Name="GhdlYosysCompileWindowExtensionViewView"
             IsVisible="{Binding IsVisible}">
    <Border Classes="RoundToolBar">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Button Command="{Binding OpenCompileSettingsAsync}"
                    CommandParameter="{Binding #GhdlYosysCompileWindowExtensionViewView}">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <TextBlock VerticalAlignment="Center" Text="Yosys Settings" />
                    <Image Source="{DynamicResource Material.SettingsOutline}" VerticalAlignment="Center"
                           Height="15" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Border>
</UserControl>